<h1><%=@post.title%></h1>
<h4>Location: <%=@post.station.name%></h4>
<p><%=@post.relative_time%> by <%=@post.user.username%></p>
<br>
<div>
    <%=@post.content%>
</div>
<br>

<%=link_to "Back to #{@post.station.name} ", station_path(@post.station,@post)%>

<%if @post.comments.present?%>
    <h3>Comments:</h3>
    <%= render 'comments/index'%>
<%end%>
<br>
<%=link_to 'Comment', new_station_post_comment_path(@post.station, @post)%>
