<br>
<%= form_tag stations_path, method: :get do %>
    <%= text_field_tag 'search', params[:hello], placeholder: "Station Name (e.g. #{Station.random_name})" %>
    <%= submit_tag 'Search!' %>
<% end %>
<br>
<div>
    <h3>Most recent post:</h3>
    <div>
        <h6><%=Post.last.title%></h6>
        <p><%=Post.last.description%></p>
        <p>by <%=Post.last.user.username%> at <%=Post.last.station.name%> Station</p>
    </div>
</div>